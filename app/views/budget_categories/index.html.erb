<p id="notice"><%= notice %></p>

<h1>Listing Budget Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_categories.each do |budget_category| %>
      <tr>
        <td><%= budget_category.name %></td>
        <td><%= budget_category.kind %></td>
        <td><%= link_to 'Show', [@budget_domain, budget_category] %></td>
        <% if @can_update %>
          <td><%= link_to 'Edit', [:edit, @budget_domain, budget_category] %></td>
        <% end %>
        <% if @can_destroy %>
          <td><%= link_to 'Destroy', [@budget_domain, budget_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @can_destroy %>
  <%= link_to 'New Budget category', new_budget_domain_budget_category_path %> |
<% end %>
<%= link_to 'Go back', @budget_domain %>
