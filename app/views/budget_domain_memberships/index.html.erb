<h1>Listing Members</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user.email %></td>
        <td><%= membership.role %></td>
        <% if membership.admin? %>
          <td colspan="2">
            <s>no actions</s>
          </td>
        <% else %>
          <td><%= link_to 'Edit', edit_budget_domain_membership_path(@budget_domain, membership) %></td>
          <td><%= link_to 'Destroy', budget_domain_membership_path(@budget_domain, membership), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', budget_domain_path(@budget_domain) %>
