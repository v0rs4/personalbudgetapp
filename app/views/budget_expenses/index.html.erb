<p id="notice"><%= notice %></p>

<h1>Listing Budget Expenses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Budget domain</th>
      <th>Budget account</th>
      <th>Amount</th>
      <th>Budget category</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_expenses.each do |budget_expense| %>
      <tr>
        <td><%= budget_expense.user.email %></td>
        <td><%= budget_expense.budget_domain.name %></td>
        <td><%= budget_expense.budget_account.name %></td>
        <td><%= budget_expense.amount %></td>
        <td><%= budget_expense.budget_category.name %></td>
        <td><%= budget_expense.comment %></td>
        <td><%= link_to 'Show', [@budget_domain, budget_expense] %></td>
        <td><%= link_to 'Edit', [:edit, @budget_domain, budget_expense] %></td>
        <td><%= link_to 'Destroy', [@budget_domain, budget_expense], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget expense', new_budget_domain_budget_expense_path(@budget_domain) %> |
<%= link_to 'Go back', @budget_domain %>
