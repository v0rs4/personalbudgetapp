<p id="notice"><%= notice %></p>

<h1>Listing Budget Plans</h1>

<table>
  <thead>
    <tr>
      <th>Budget domain</th>
      <th>Budget category</th>
      <th>Planned amount</th>
      <th>Actual amount</th>
      <th>Year</th>
      <th>Month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_plans.each do |budget_plan| %>
      <tr>
        <td><%= budget_plan.budget_domain.name %></td>
        <td><%= budget_plan.budget_category.name %></td>
        <td><%= budget_plan.planned_amount %></td>
        <td><%= budget_plan.actual_amount %></td>
        <td><%= budget_plan.year %></td>
        <td><%= budget_plan.month %></td>
        <td><%= link_to 'Show', [@budget_domain, budget_plan] %></td>
        <td><%= link_to 'Edit', [:edit, @budget_domain, budget_plan] %></td>
        <td><%= link_to 'Destroy', [@budget_domain, budget_plan], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget plan', new_budget_domain_budget_plan_path(@budget_domain) %> |
<%= link_to 'Go back', @budget_domain %>
