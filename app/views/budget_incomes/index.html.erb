<p id="notice"><%= notice %></p>

<h1>Listing Budget Incomes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Budget domain</th>
      <th>Budget account</th>
      <th>Amount</th>
      <th>Budget category</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_incomes.each do |budget_income| %>
      <tr>
        <td><%= budget_income.user.email %></td>
        <td><%= budget_income.budget_domain.name %></td>
        <td><%= budget_income.budget_account.name %></td>
        <td><%= budget_income.amount %></td>
        <td><%= budget_income.budget_category.name %></td>
        <td><%= budget_income.comment %></td>
        <td><%= link_to 'Show', [@budget_domain, budget_income] %></td>
        <td><%= link_to 'Edit', [:edit, @budget_domain, budget_income] %></td>
        <td><%= link_to 'Destroy', [@budget_domain, budget_income], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget income', new_budget_domain_budget_income_path(@budget_domain) %> |
<%= link_to 'Go back', @budget_domain %>
