<p id="notice"><%= notice %></p>

<h1>Listing Budget Debts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Budget domain</th>
      <th>Budget account</th>
      <th>Amount</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_debts.each do |budget_debt| %>
      <tr>
        <td><%= budget_debt.user.email %></td>
        <td><%= budget_debt.budget_domain.name %></td>
        <td><%= budget_debt.budget_account.name %></td>
        <td><%= budget_debt.amount %></td>
        <td><%= budget_debt.comment %></td>
        <td><%= link_to 'Show', [@budget_domain, budget_debt] %></td>
        <td><%= link_to 'Edit', [:edit, @budget_domain, budget_debt] %></td>
        <td><%= link_to 'Destroy', [@budget_domain, budget_debt], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget debt', new_budget_domain_budget_debt_path(@budget_domain) %> |
<%= link_to 'Go back', @budget_domain %>
